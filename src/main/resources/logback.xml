<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- Override with -Dlogback.configurationFile=/home/user/path/logback.xml -->

	<!-- http://logback.qos.ch/manual/configuration.html#LevelChangePropagator -->
	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator" />

	<!-- http://logback.qos.ch/manual/layouts.html -->
	<appender name="default" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%10.10thread] %25.25logger{25} %.-1level %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.vaguehope.toadcast" level="INFO" />
	<logger name="org.fourthline.cling.binding.xml.ServiceDescriptorBinder" level="ERROR" />
	<logger name="org.fourthline.cling.protocol.RetrieveRemoteDescriptors" level="ERROR" />
	<logger name="org.fourthline.cling.transport.spi.StreamClient" level="WARN" />

	<root level="info">
		<appender-ref ref="default" />
	</root>

</configuration>